<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnkcb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KCB"
        app:layout_constraintBottom_toBottomOf="@+id/btnequity"
        app:layout_constraintEnd_toEndOf="@+id/btnabsa"
        app:layout_constraintStart_toStartOf="@+id/btnabsa"
        app:layout_constraintTop_toTopOf="@+id/btnequity" />

    <Button
        android:id="@+id/btnequity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="80dp"
        android:text="EQUITY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnabsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="291dp"
        android:text="ABSA"
        app:layout_constraintEnd_toEndOf="@+id/btnnbk"
        app:layout_constraintStart_toStartOf="@+id/btnnbk"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btncop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="47dp"
        android:text="COPERATIVE"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnabsa"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnnbk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="232dp"
        android:text="NBK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="POSTBANK"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnnbk"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>